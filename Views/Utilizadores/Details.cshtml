@model SiteReviews.Models.Utilizadores

@{
    ViewData["Title"] = "Detalhes do utilizador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes do utilizador</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeUtilizador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeUtilizador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Fotos/@Html.DisplayFor(modelItem => Model.Fotografia)"
            alt="Foto do utilizador @Model.NomeUtilizador"
            title="@Model.NomeUtilizador"
            height="50" width="50" />
        </dd>
        <dt class = "col-sm-2">
            Admin
        </dt>
        <dd class = "col-sm-10">
            @(Model.admin.Equals(true)?"Sim":"Não")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
</div>
