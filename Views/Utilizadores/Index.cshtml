@model IEnumerable<SiteReviews.Models.Utilizadores>

@{
    ViewData["Title"] = "Lista de utilizadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de utilizadores</h1>

<p>
    <a asp-action="Create">Criar utilizador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeUtilizador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotografia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.admin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeUtilizador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                <img src="~/Fotos/@Html.DisplayFor(modelItem => item.Fotografia)"
                alt="Foto de @item.NomeUtilizador"
                title="@item.NomeUtilizador"
                height="50" width="50" />
            </td>
            <td>
                @(item.admin.Equals(true)?"Sim":"Não")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
