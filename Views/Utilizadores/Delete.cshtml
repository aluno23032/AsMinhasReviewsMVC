@model SiteReviews.Models.Utilizadores

@{
    ViewData["Title"] = "Remover utilizador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Remover utilizador</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeUtilizador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeUtilizador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fotografia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.admin)
        </dt>
        <dd class = "col-sm-10">
            @(Model.admin.Equals(true)?"Sim":"Não")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
